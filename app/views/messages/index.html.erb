        <div class="mail-box">
            <aside class="lg-side">
                <div class="inbox-head">
                    <h3>Messages</h3>
                </div>
                <div class="inbox-body">
                    <div class="mail-option">
                        <div class="chk-all">
                            <input type="checkbox" class="mail-checkbox mail-group-checkbox">
                            <div class="btn-group">
                                <a data-toggle="dropdown" href="#" class="btn mini all" aria-expanded="false">
                                     All
                                     <i class="fa fa-angle-down "></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#"> None</a></li>
                                    <li><a href="#"> Read</a></li>
                                    <li><a href="#"> Unread</a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="btn-group">
                            <a data-original-title="Refresh" data-placement="top" href="" class="btn mini tooltips">
                                             <i class=" fa fa-refresh"></i>
                                         </a>
                        </div>
                        <div class="btn-group hidden-phone">
                            <a data-toggle="dropdown" href="#" class="btn mini blue" aria-expanded="false">
	                             More
	                             <i class="fa fa-angle-down "></i>
	                         </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <a data-toggle="dropdown" href="#" class="btn mini blue">
                                             Move to
                                             <i class="fa fa-angle-down "></i>
                                         </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="fa fa-pencil"></i> Mark as Read</a></li>
                                <li><a href="#"><i class="fa fa-ban"></i> Spam</a></li>
                                <li class="divider"></li>
                                <li><a href="#"><i class="fa fa-trash-o"></i> Delete</a></li>
                            </ul>
                        </div>

                        <ul class="unstyled inbox-pagination">
                            <li><span><%= @sum_sent_message %></span></li>
                            <li>
                                <a class="np-btn" href="#"><i class="fa fa-angle-left  pagination-left"></i></a>
                            </li>
                            <li>
                                <a class="np-btn" href="#"><i class="fa fa-angle-right pagination-right"></i></a>
                            </li>
                        </ul>
                    </div>

                    <% if @sent_message.length > 0 %>
                        Sent messages
                        <table class="table table-inbox table-hover">
                            <tbody>
    	                        <% @sent_message.each do |message| %>
        	                            <tr class="">
        	                                <td class="inbox-small-cells">
        	                                    <input type="checkbox" class="mail-checkbox">
        	                                </td>
        	                               	<td class="view-message dont-show"><a class="" href="/messages/<%= message[:message_content].id %>"><%= message[:recipient].fullname %></a></td>
        	                                <td class="view-message">
                                                <button class="btn btn-sm btn-light pull-left"><font color="lightgray">Sent</font></button>
                                                <a href="/messages/<%= message[:message_content].id %>">
                                                    <b>
                                                        <%= message[:message_content].title %> <%= message[:message_content].body %>
                                                    </b>
                                                </a>
                                            </td>
        	                                <td class="view-message text-right"><a href="/messages/<%= message[:message_content].id %>"><%= message[:message_content].created_at %></a></td>
        	                            </tr>
    	                        <% end %>
                            </tbody>
                        </table>
                    <% end %>

                    <% if @recieve_message.length > 0 %>
                    Recieve messages
                        <table class="table table-inbox table-hover">
                            <tbody>
                        	
	                        	<% @recieve_message.each do |message| %>
	                                <% if message[:message_content].unread %>
                                        <tr class="unread">
                                    <% else %>
                                        <tr class="">
                                    <% end %>
                                    
    	                                <td class="inbox-small-cells">
    	                                    <input type="checkbox" class="mail-checkbox">
    	                                </td>
    	                               	<td class="view-message dont-show">
                                            <a href="/messages/<%= message[:message_content].id %>">
                                                <%= message[:sender].fullname %>
                                            </a>
                                        </td>
    	                                <td class="view-message">
                                            <% if message[:message_content].unread %>   
                                                <button class="btn btn-sm btn-danger pull-left">New&nbsp;</button>
                                            <% else %>
                                                <button class="btn btn-sm btn-light pull-left"><font color="lightgray">Seen</font></button>
                                            <% end %>
                                            <a href="/messages/<%= message[:message_content].id %>">
                                                <b><%= message[:message_content].title %></b>
                                                <%= message[:message_content].body %>
                                            </a>
                                            
                                            
                                        </td>
    	                                <td class="view-message text-right">
                                            <a href="/messages/<%= message[:message_content].id %>"><%= message[:message_content].created_at %></a>
                                        </td>
    	                            </tr> 
                                
	                            <% end %>
                            
                            </tbody>
                        </table>
                    <% end %>

                </div>
            </aside>
        </div>
