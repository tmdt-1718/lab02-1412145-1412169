<title>ZURBemails</title>
	
<link rel="stylesheet" type="text/css" href="stylesheets/email.css" />

</head>
 
<body bgcolor="#FFFFFF">

<!-- HEADER -->



<!-- BODY -->
<table class="body-wrap">
	<tr>
		<td></td>
		<td class="container" bgcolor="#FFFFFF">

			<div class="content">
			<table>
				<tr>
					<td>
						<p class="callout">
							<% if @sender.id == current_account.id %>
								From: <strong>Me</strong>
							<% else %>
								From: <strong><%= @sender.fullname %></strong> (<a href="emailto:<%= @sender.username %>">
								<%= @sender.username %>
									
								</a>)
								<a href=""><button class="pull-right btn btn-primary btn-sm">Reply</button></a>
							<% end %>
							
							
							<br><br>

							<% if @recipient.id == current_account.id %>
								To:&nbsp;&nbsp;&nbsp;&nbsp; <strong>Me</strong> 
							<% else %>
								To:&nbsp;&nbsp;&nbsp;&nbsp; <strong><%= @recipient.fullname %></strong> (<a href="emailto:<%= @recipient.username %>">
								<%= @recipient.username %>
								</a>)
							<% end %>
							
						</p>				
						<h3><%= @message_detail.title %></h3>
						<p style="background-color: #ffffff;" class="callout"><%= @message_detail.body %></p>		
						<p style="background-color: #dee3ea;" class="callout">
							Received at <%= @message_detail.created_at %> (<%= time_ago_in_words(@message_detail.created_at)%> ago)
						</p>
