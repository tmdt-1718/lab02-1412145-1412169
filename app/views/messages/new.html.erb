      <div class="inbox-head">
        <h3>New Message</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-10">
            <%= form_with scope: :message, url: messages_path, local: true do |form| %>
            
              <p>
                  <%= form.label "Select friend" %><br>
                  <%= select("message", "friend_id", @friendlist.collect{|p| [p.fullname, p.id]}, {include_blank: false}, {:class => 'form-control'}) %>
              </p>
              
              <p>
                  <%= form.label :content %><br>
                  <%= form.text_area :content, :class => 'form-control', :rows => '10' %>
              </p>
              
              <p>
                  <%= form.submit "Send", :class => 'btn btn-primary' %>
              </p>
              
            <% end %>
          </div>
        </div>
        
    </div>
    </div>
    <!-- <div class="col-md-3"></div> -->
  </div>