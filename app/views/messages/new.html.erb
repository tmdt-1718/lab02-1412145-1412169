<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 ">
      <div class="page-header">
        <h1 class="text-center"><small>New Message</small></h1>
      </div>
      <div class="card-body">
        <%= form_with scope: :message, url: messages_path, local: true do |form| %>
            
            <p>
                <%= form.label :recipient %><br>
                <%= select("message", "friend_id", @friendlist.collect{|p| [p.fullname, p.id]}, {include_blank: 'Select friend'}) %>
            </p>
            
            <p>
                <%= form.label :content %><br>
                <%= form.text_area :content, :class => 'form-control' %>
            </p>
            
            <p>
                <%= form.submit "Send", :class => 'btn btn-primary' %>
            </p>
            
        <% end %>
    </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>