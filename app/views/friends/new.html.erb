<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="<%= root_path %>">Home</a>
  </li>
  <li class="breadcrumb-item">
    <a href="<%= friends_path %>">Friends</a>
  </li>
  <li class="breadcrumb-item active">Add Friend</li>
</ol>

<div class="mb-0 mt-4">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-lg-4">
            <i class="fa fa-newspaper-o"></i> Add Friend
            <div class="clearfix"></div>
        </div>
       
    </div>
    
</div>
<hr class="mt-2">




<div class="list-content">
    <ul class="list-group">
        <li href="#" class="list-group-item title">
            Let's make new friends!
        </li>
        <% if !@account.nil? %>
            <% @account.each do |account| %>
                <% if account.id != current_account.id %>
                <li href="#" class="list-group-item text-left">
                    <img class="img-thumbnail" src="<%= account.avatar %>">
                    <label class="name">
                        <%= account.fullname %><br>
                    </label>
                    <label class="pull-right"><br>
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                <%= form_tag(controller: "friends", action: "create") do %>
                                    <%= hidden_field_tag("requestedid", account.id) %>
                                        <%= button_tag(type: "submit", class: "btn btn-success", :title => "Add friend") do %>
                                            <i class="fa fa-plus"></i>
                                        <% end %> 
                                <% end %>
                            </div>
                            &nbsp;&nbsp;
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                <a href="#" class="btn btn-dark" title="Block">
                                    <i class="fa fa-times-circle"></i>
                                </a>
                            </div>
                        </div>
                        
                    </label>
                    <div class="break"></div>
                </li>
                <% end %>
            <% end %>
        <% end %>
    </ul>
</div>